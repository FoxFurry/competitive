{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build G++",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/builds/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}